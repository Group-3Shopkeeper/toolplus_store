<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.e.toolplusstore">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".AddStore">

        </activity>
        <activity
            android:name=".EditProduct"
            android:parentActivityName=".ProductDetailsActivty" />
        <activity android:name=".ProductDetailsActivty" />
        <activity android:name=".LoginActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".NewOrderActivity" />
        <activity android:name=".EditStoreActivity"
            android:parentActivityName=".HomeActivity"/>
        <activity
            android:name=".ProductActivity"
            android:parentActivityName=".HomeActivity" />
        <activity
            android:name=".SearchProductActivity"
            android:parentActivityName=".HomeActivity" />
        <activity android:name=".HomeActivity"></activity>
        <activity
            android:name=".AddProductActivity"
            android:parentActivityName=".HomeActivity" />
    </application>

</manifest>