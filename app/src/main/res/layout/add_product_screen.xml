<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimaryDark" />

        <LinearLayout
            android:id="@+id/rl"
            android:weightSum="3.0"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="horizontal"
            android:layout_below="@id/toolbar">
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_weight="1.0"
                android:layout_height="fill_parent"
                app:cardCornerRadius="15dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="40dp"
                android:id="@+id/cv1"
                app:cardElevation="10dp"
                android:layout_marginBottom="5dp"
                android:background="@color/colorPrimary"
                >
                <ImageView
                    android:id="@+id/iv1"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/add_photos"
                    />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cv2"
                android:layout_width="0dp"
                android:layout_weight="1.0"
                android:layout_height="fill_parent"
                app:cardCornerRadius="15dp"
                app:cardElevation="10dp"
                android:layout_toRightOf="@+id/cv1"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="5dp"
                android:background="@color/colorPrimary"
                >
                <ImageView
                    android:id="@+id/iv2"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/add_photos"
                    />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cv3"
                android:layout_width="0dp"
                android:layout_weight="1.0"
                android:layout_height="fill_parent"
                app:cardCornerRadius="15dp"
                android:layout_toRightOf="@+id/cv2"
                app:cardElevation="10dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="5dp"
                android:background="@color/colorPrimary"
                >
                <ImageView
                    android:id="@+id/iv3"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:scaleType="centerCrop"
                    android:adjustViewBounds="true"
                    android:src="@drawable/add_photos"
                    />
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <Button
            android:id="@+id/productCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="40dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/border_white"
            android:drawableEnd="@drawable/drop_down"
            android:elevation="6dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="left"
            android:padding="10dp"
            android:text="Category"
            android:textColor="@color/colorPrimary"
            android:textSize="15sp" />
        <EditText
            android:id="@+id/productName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/productCategory"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="40dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/border_white"
            android:elevation="6dp"
            android:hint="Product Name"
            android:drawableRight="@drawable/ic_star"
            android:padding="10dp"
            android:inputType="textCapWords"
            android:textColor="@color/colorPrimary"
            android:textColorHint="#AEB9C5"
            android:textSize="15sp" />
        <AutoCompleteTextView
            android:completionThreshold="1"
            android:inputType="textAutoComplete|textAutoCorrect"
            android:id="@+id/productBrand"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/productName"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="40dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/border_white"
            android:elevation="6dp"
            android:hint="Brand"
            android:drawableRight="@drawable/ic_star"
            android:padding="10dp"
            android:textColor="@color/colorPrimary"
            android:textColorHint="#AEB9C5"
            android:textSize="15sp" />
        <EditText
            android:id="@+id/productQuantity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/productBrand"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="40dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/border_white"
            android:elevation="6dp"
            android:hint="Quantity In Stock"
            android:drawableRight="@drawable/ic_star"
            android:inputType="number"
            android:padding="10dp"
            android:textColor="@color/colorPrimary"
            android:textColorHint="#AEB9C5"
            android:textSize="15sp" />
        <EditText
            android:id="@+id/productPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/productQuantity"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="40dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/border_white"
            android:elevation="6dp"
            android:hint="Price"
            android:drawableRight="@drawable/ic_star"
            android:drawablePadding="100dp"
            android:inputType="number"
            android:padding="10dp"
            android:textColor="@color/colorPrimary"
            android:textColorHint="#AEB9C5"
            android:textSize="15sp" />
        <EditText
            android:id="@+id/productDiscount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Product Discount (Optional)"
            android:background="@drawable/border_white"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="40dp"
            android:layout_marginBottom="10dp"
            android:padding="10dp"
            android:elevation="6dp"
            android:textColorHint="#AEB9C5"
            android:inputType="numberDecimal"
            android:layout_below="@+id/productPrice"
            android:textColor="@color/colorPrimary"
            android:textSize="15sp"/>
        <EditText
            android:id="@+id/productDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="40dp"
            android:layout_marginBottom="10dp"
            android:hint="Product Description (Optional)"
            android:background="@drawable/border_white"
            android:padding="10dp"
            android:elevation="6dp"
            android:layout_below="@+id/productDiscount"
            android:inputType="text"
            android:textColorHint="#AEB9C5"
            android:textColor="@color/colorPrimary"
            android:textSize="15sp"/>
        <Button
            android:id="@+id/btnAddProduct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/productDescription"
            android:layout_centerInParent="true"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/search_bar_decorator"
            android:padding="10dp"
            android:text="Add Product"
            android:textColor="@color/white"
            android:textStyle="bold" />
    </RelativeLayout>
</ScrollView>