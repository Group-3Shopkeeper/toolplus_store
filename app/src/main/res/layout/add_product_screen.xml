<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto">
        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimaryDark"
            android:id="@+id/toolbar"/>
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_below="@id/toolbar"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:src="@drawable/camera"
            android:id="@+id/productImage"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/productCategory"
            android:textColor="@color/colorPrimary"
            android:background="@drawable/border_white"
            android:gravity="left"
            android:drawableEnd="@drawable/drop_down"
            android:layout_below="@+id/productImage"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="20dp"
            android:text="Category"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_marginBottom="10dp"
            android:elevation="6dp"
            android:textSize="15sp"
            android:padding="10dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/productName"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:textColor="@color/colorPrimary"
            android:textColorHint="#AEB9C5"
            android:elevation="6dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/border_white"
            android:layout_below="@+id/productCategory"
            android:layout_marginTop="5dp"
            android:hint="Product Name"
            android:textSize="15sp"
            android:padding="10dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:id="@+id/productBrand"
            android:elevation="6dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/border_white"
            android:textColor="@color/colorPrimary"
            android:textColorHint="#AEB9C5"
            android:layout_below="@+id/productName"
            android:layout_marginTop="5dp"
            android:hint="Brand"
            android:textSize="15sp"
            android:padding="10dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:elevation="6dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/border_white"
            android:textColor="@color/colorPrimary"
            android:textColorHint="#AEB9C5"
            android:layout_marginRight="40dp"
            android:id="@+id/productQuantity"
            android:inputType="number"
            android:layout_below="@+id/productBrand"
            android:layout_marginTop="5dp"
            android:hint="Quantity In Stock"
            android:textSize="15sp"
            android:padding="10dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:id="@+id/productPrice"
            android:layout_below="@+id/productQuantity"
            android:elevation="6dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/border_white"
            android:textColor="@color/colorPrimary"
            android:textColorHint="#AEB9C5"
            android:inputType="number"
            android:layout_marginTop="5dp"
            android:hint="Product Price"
            android:textSize="15sp"
            android:padding="10dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:id="@+id/productDiscount"
            android:elevation="6dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/border_white"
            android:textColor="@color/colorPrimary"
            android:textColorHint="#AEB9C5"
            android:layout_below="@+id/productPrice"
            android:layout_marginTop="5dp"
            android:inputType="number"
            android:hint="Product Discount"
            android:textSize="15sp"
            android:padding="10dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:id="@+id/productDescription"
            android:elevation="6dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/border_white"
            android:textColor="@color/colorPrimary"
            android:textColorHint="#AEB9C5"
            android:layout_below="@+id/productDiscount"
            android:layout_marginTop="5dp"
            android:hint="Description of Product"
            android:textSize="15sp"
            android:padding="10dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_centerInParent="true"
            android:padding="20dp"
            android:layout_margin="30dp"
            android:text="Add Product"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@drawable/search_bar_decorator"
            android:layout_below="@id/productDescription"
            android:id="@+id/btnAddProduct"/>

    </RelativeLayout>
</ScrollView>