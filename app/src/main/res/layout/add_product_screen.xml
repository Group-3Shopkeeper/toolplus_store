<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimaryDark" />

        <LinearLayout
            android:id="@+id/rl"
            android:weightSum="3.0"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="horizontal"
            android:layout_below="@id/toolbar">
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_weight="1.0"
                android:layout_height="fill_parent"
                app:cardCornerRadius="15dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="40dp"
                android:id="@+id/cv1"
                app:cardElevation="10dp"
                android:layout_marginBottom="5dp"
                android:background="@color/colorPrimary"
                >
                <ImageView
                    android:id="@+id/iv1"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/add_photos"
                    />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cv2"
                android:layout_width="0dp"
                android:layout_weight="1.0"
                android:layout_height="fill_parent"
                app:cardCornerRadius="15dp"
                app:cardElevation="10dp"
                android:layout_toRightOf="@+id/cv1"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="5dp"
                android:background="@color/colorPrimary"
                >
                <ImageView
                    android:id="@+id/iv2"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/add_photos"
                    />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cv3"
                android:layout_width="0dp"
                android:layout_weight="1.0"
                android:layout_height="fill_parent"
                app:cardCornerRadius="15dp"
                android:layout_toRightOf="@+id/cv2"
                app:cardElevation="10dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="5dp"
                android:background="@color/colorPrimary"
                >
                <ImageView
                    android:id="@+id/iv3"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:scaleType="centerCrop"
                    android:adjustViewBounds="true"
                    android:src="@drawable/add_photos"
                    />
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <Button
            android:id="@+id/productCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="40dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/border_white"
            android:drawableEnd="@drawable/drop_down"
            android:elevation="6dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="left"
            android:padding="10dp"
            android:text="Category"
            android:textColor="@color/colorPrimary"
            android:textSize="15sp" />
        <RelativeLayout
            android:id="@+id/rl1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="40dp"
            android:layout_marginBottom="10dp"
            android:elevation="6dp"
            android:background="@color/white"
            android:layout_below="@+id/productCategory">
            <TextView
                android:id="@+id/tvProductName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/border_white"
                android:text="Product Name: "
                android:paddingLeft="10dp"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:textColor="@color/colorPrimary"
                android:textColorHint="#AEB9C5"
                android:textSize="15sp" />
        <AutoCompleteTextView
            android:id="@+id/productName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tvProductName"
            android:background="@drawable/border_white"
            android:drawableRight="@drawable/ic_star"
            android:paddingTop="10dp"
            android:paddingLeft="5dp"
            android:paddingBottom="10dp"
            android:paddingRight="5dp"
            android:inputType="textCapWords"
            android:textColor="@color/colorPrimary"
            android:textColorHint="#AEB9C5"
            android:textSize="15sp" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="40dp"
            android:layout_marginBottom="10dp"
            android:elevation="6dp"
            android:background="@color/white"
            android:layout_below="@+id/rl1">
            <TextView
                android:id="@+id/tvProductBrand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/border_white"
                android:text="Brand :"
                android:paddingLeft="10dp"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:textColor="@color/colorPrimary"
                android:textColorHint="#AEB9C5"
                android:textSize="15sp" />
            <EditText
                android:id="@+id/productBrand"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tvProductBrand"
                android:background="@drawable/border_white"
                android:drawableRight="@drawable/ic_star"
                android:paddingTop="10dp"
                android:paddingLeft="5dp"
                android:paddingBottom="10dp"
                android:inputType="textCapWords"
                android:paddingRight="5dp"
                android:textColor="@color/colorPrimary"
                android:textColorHint="#AEB9C5"
                android:textSize="15sp" />
        </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="10dp"
        android:elevation="6dp"
        android:background="@color/white"
        android:layout_below="@+id/rl2">
        <TextView
            android:id="@+id/tvProductQty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/border_white"
            android:text="Quantity in stock :"
            android:paddingLeft="10dp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:textColor="@color/colorPrimary"
            android:textColorHint="#AEB9C5"
            android:textSize="15sp" />
        <EditText
            android:id="@+id/productQuantity"
            android:layout_toRightOf="@+id/tvProductQty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_white"
            android:drawableRight="@drawable/ic_star"
            android:inputType="number"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            android:textColor="@color/colorPrimary"
            android:textColorHint="#AEB9C5"
            android:textSize="15sp" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="10dp"
        android:elevation="6dp"
        android:background="@color/white"
        android:layout_below="@+id/rl3">
        <TextView
            android:id="@+id/tvProductPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/border_white"
            android:text="Price :"
            android:paddingLeft="10dp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:textColor="@color/colorPrimary"
            android:textColorHint="#AEB9C5"
            android:textSize="15sp" />
        <EditText
            android:id="@+id/productPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tvProductPrice"
            android:background="@drawable/border_white"
            android:drawableRight="@drawable/ic_star"
            android:drawablePadding="100dp"
            android:inputType="number"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            android:textColor="@color/colorPrimary"
            android:textColorHint="#AEB9C5"
            android:textSize="15sp" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="10dp"
        android:elevation="6dp"
        android:background="@color/white"
        android:layout_below="@+id/rl4">
        <TextView
            android:id="@+id/tvProductDiscount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/border_white"
            android:text="Discount :"
            android:paddingLeft="10dp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:textColor="@color/colorPrimary"
            android:textColorHint="#AEB9C5"
            android:textSize="15sp" />
        <EditText
            android:id="@+id/productDiscount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tvProductDiscount"
            android:background="@drawable/border_white"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            android:textColorHint="#AEB9C5"
            android:inputType="numberDecimal"
            android:textColor="@color/colorPrimary"
            android:textSize="15sp"/>
    </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="40dp"
            android:layout_marginBottom="10dp"
            android:elevation="6dp"
            android:background="@color/white"
            android:layout_below="@+id/rl5">
            <TextView
                android:id="@+id/tvProductDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/border_white"
                android:text="Description :"
                android:paddingLeft="5dp"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:textColor="@color/colorPrimary"
                android:textColorHint="#AEB9C5"
                android:textSize="15sp" />
            <EditText
                android:id="@+id/productDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tvProductDescription"
                android:background="@drawable/border_white"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingRight="5dp"
                android:paddingLeft="5dp"
                android:textColorHint="#AEB9C5"
                android:inputType="numberDecimal"
                android:textColor="@color/colorPrimary"
                android:textSize="15sp"/>
        </RelativeLayout>
        <Button
            android:id="@+id/btnAddProduct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rl6"
            android:layout_centerInParent="true"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/search_bar_decorator"
            android:padding="10dp"
            android:text="Add Product"
            android:textColor="@color/white"
            android:textStyle="bold" />
    </RelativeLayout>
</ScrollView>